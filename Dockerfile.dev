FROM golang:1.25

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies (will be cached in layer)
RUN go mod download

# Install air for hot reloading
RUN go install github.com/air-verse/air@latest

# Copy the rest of the code
COPY . .

# Expose port
EXPOSE 8080

# Run air for hot reloading
CMD ["air", "-c", ".air.toml"]
